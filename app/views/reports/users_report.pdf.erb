<h3 align="center">
  Reporte de Cantidad de publicaciones por usuario
</h3>
<table class="table">
  <tr>
    <th>Id</th>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>Cantidad de publicaciones</th>
    <th>Porcentaje de participaci√≥n</th>
  </tr>

  <tbody>
    <% tot_publications = Publication.all.count %>
    <% @reports_users.each do |post| %>
      <% num_p_by_us = Publication.num_publications_by_user(post.id) %>
      <% perc = (num_p_by_us * 100 / tot_publications) %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.name %></td>
        <td><%= post.lastname %></td>
        <td><%= num_p_by_us %></td>
        <td><%= "#{perc}%" %></td>
      </tr>
    <%end%>
  </tbody>
</table>
